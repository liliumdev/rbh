{{title "My profile"}}

<div class="container" id="normal-container">
   <div class="row">
      <div class="col-md-8 col-sm-12 col-xs-12 col-centered">
          <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12 page-title v-align-center">
                Edit profile information
            </div>
			<div class="col-md-12 col-sm-12 col-xs-12 v-align-center">
				<br>
			   	{{#each flashMessages.queue as |flash|}}
				  {{flash-message flash=flash}}
				{{/each}}
			</div>
          </div>
          <div class="row">
              <div class="col-md-12">
                  {{edit-user model=model editHandler=(action "edit") showRole=false}}
              </div>
          </div>
       </div>
       
   </div>
   
</div>
