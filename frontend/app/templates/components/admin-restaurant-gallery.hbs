<div class="row">
	<div class="col-md-12">
		<div class="card padded">
			<div class="content" style="margin-top: 0px;">
				<form>
					<div class="row">
						<div class="col-md-12">							
							{{drop-zone clickable=true addRemoveLinks=true autoProcessQueue=false acceptedFiles="image/*" addedfile=addedPhoto removedfile=removedPhoto }} 
						</div>  
					</div>
				</form>

				<p>
					<br><br>
					<b>Already added files: </b>
					<br>
					<ul style="padding-left: 0px;">
						<br><br>
						{{#each new.restaurant.photos as |photo| }}
							{{#if photo.imageUrl}}
								<li style="display: inline-block; margin-right: 15px;">
									<img class="img-responsive" style="max-width: 200px;" src="http://s3.eu-central-1.amazonaws.com/rbh-2017/gallery/thumbs/{{photo.imageUrl}}"> 
									&nbsp; &nbsp; 
									<a href="javascript:;" style="display: block; text-align: center;" {{action "removeAddedUploadedPhoto" photo}}><i class="fa fa-remove"></i></a>
								</li>
							{{else}}
								<li>{{photo.name}} &nbsp; &nbsp; <a href="javascript:;" {{action "removeAddedPhoto" photo}}><i class="fa fa-remove"></i></a></li>
							{{/if}}
						{{/each}}
					</ul>
				</p>
			</div>
		</div>
	</div>
</div>
