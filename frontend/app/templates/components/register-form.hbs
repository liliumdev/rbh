<form class="col-md-12">
{{#unless complete}}
	{{#if hasError}}
  <div class="alert alert-danger"> 
    <span>There were errors while trying to register.</span>
  </div>   
	{{/if}}

  <div class="form-group">
    {{validated-input type="text" model=this placeholder="First Name" valuePath="firstName"}}
  </div>
  
  <div class="form-group">
    {{validated-input type="text" model=this placeholder="Last Name" valuePath="lastName"}}
  </div>
                        
  <div class="form-group">
    {{validated-input type="email" model=this placeholder="Email" valuePath="email"}}
  </div>
    
  <div class="form-group form-group-inline">
		<select onchange={{action "selectCountry" value="target.value"}}>
			{{#each countries as |countryChoice|}}
				<option value={{countryChoice.id}} selected={{eq country countryChoice.id}}>{{countryChoice.name}}</option>
		    {{/each}}
		</select>

		<select onchange={{action "selectCity" value="target.value"}}>
			{{#each cities as |cityChoice|}}
				<option value={{cityChoice.id}} selected={{eq city cityChoice.id}}>{{cityChoice.name}}</option>
		    {{/each}}
		</select>
  </div>
                        
  <div class="form-group">
    {{validated-input type="password" model=this placeholder="Password" valuePath="password"}}
  </div>
  
  <div class="form-group">
    {{validated-input type="password" model=this placeholder="Confirm Password" valuePath="password2"}}
  </div>
  
  
  <button type="button" class="btn btn-primary" disabled={{v-get this 'isInvalid'}} {{action "register"}}>Create Account</button>
{{/unless}}

  {{#if complete}}
      <p class="form-result">Successfully registered! You are now logged in.</p>
  {{/if}}
</form>